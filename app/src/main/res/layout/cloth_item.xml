<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="300dp">

    <com.google.android.material.card.MaterialCardView
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        app:cardElevation="2dp"
        app:strokeWidth="2dp"
        android:layout_marginStart="10dp"
        app:strokeColor="@color/second_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/white_01"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/textViewTypeItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="35dp"
            android:textColor="@color/second_main"
            android:textStyle="bold"
            android:text="Тип: Верх"/>
        <TextView
            android:id="@+id/textViewNameItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/second_main"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Футболка"/>
        <TextView
            android:id="@+id/textViewColorItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textColor="@color/second_main"
            android:layout_marginTop="65dp"
            android:text="Цвет: Чёрный"/>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="145dp"
            android:layout_height="190dp"
            android:layout_marginTop="90dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/white_02"
            app:strokeWidth="2dp"
            app:strokeColor="@color/second_main"
            app:cardCornerRadius="15dp">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/clotheshanger" />
        </com.google.android.material.card.MaterialCardView>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>